@model IEnumerable<Proiect_TW.Models.TransferCard>

@{
    ViewData["Title"] = "Transfer Cards";
}

<h1>Transfer Cards</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bank Sender</th>
            <th>Card Sender</th>
            <th>Amount</th>
            <th>Card Beneficiary</th>
            <th>Bank Beneficiary</th>
            <th>Transfer Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transfer in Model)
        {
            <tr>
                <td>@transfer.Id</td>
                <td>@transfer.BankSender</td>
                <td>@transfer.CardSender</td>
                <td>@transfer.Amount.ToString("C")</td>
                <td>@transfer.CardBeneficiary</td>
                <td>@transfer.BankBeneficiary</td>
                <td>@transfer.TransferDate.ToString("g")</td>
            </tr>
        }
    </tbody>
</table> 