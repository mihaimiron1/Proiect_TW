@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            padding: 20px;
            font-family: 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
            min-height: 100vh;
        }
        .header {
            text-align: center;
            padding: 40px 0;
            margin-bottom: 40px;
            background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .header h1 {
            color: #ffffff;
            font-weight: 600;
            margin: 0;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }
        .dashboard-box {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            height: 100%;
            border: 1px solid rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
        }
        .dashboard-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .dashboard-box h3 {
            color: #2c3e50;
            margin-bottom: 25px;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .dashboard-box h3 i {
            font-size: 1.8rem;
            color: #4b6cb7;
        }
        .dashboard-box .btn {
            width: 100%;
            padding: 15px;
            font-size: 1.1rem;
            border-radius: 10px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }
        .dashboard-box .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }
        .btn-primary {
            background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
            border: none;
        }
        .btn-success {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            border: none;
        }
        .btn-info {
            background: linear-gradient(135deg, #2193b0 0%, #6dd5ed 100%);
            border: none;
        }
        .btn-warning {
            background: linear-gradient(135deg, #f46b45 0%, #eea849 100%);
            border: none;
        }
        .back-button {
            margin-top: 40px;
            text-align: center;
        }
        .back-button .btn {
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 10px;
            background: linear-gradient(135deg, #2c3e50 0%, #4b6cb7 100%);
            border: none;
        }
        .last-updated {
            text-align: center;
            color: #6c757d;
            margin-top: 25px;
            font-size: 0.9rem;
            background: rgba(255,255,255,0.8);
            padding: 10px;
            border-radius: 8px;
            display: inline-block;
            position: relative;
            left: 50%;
            transform: translateX(-50%);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-shield-alt"></i> Administrator Dashboard</h1>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-history"></i> Login History</h3>
                    <a href="@Url.Action("ViewLoginHistory", "Login")" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> View Login Records
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-users"></i> Registration History</h3>
                    <a href="@Url.Action("ViewDatabase", "Register")" class="btn btn-success">
                        <i class="fas fa-user-plus"></i> View User Registrations
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-exchange-alt"></i> Card Transfers</h3>
                    <a href="@Url.Action("ViewTransferA2A", "Transfer")" class="btn btn-info">
                        <i class="fas fa-money-bill-wave"></i> View Transfer Records
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-headset"></i> Support Messages</h3>
                    <a href="@Url.Action("ViewSupportMessages", "Support")" class="btn btn-warning">
                        <i class="fas fa-envelope"></i> View Support Inquiries
                    </a>
                </div>
            </div>
        </div>

        <div class="back-button">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="fas fa-home"></i> Return to Home
            </a>
        </div>

        <div class="last-updated">
            <i class="fas fa-clock"></i> Last updated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html> 