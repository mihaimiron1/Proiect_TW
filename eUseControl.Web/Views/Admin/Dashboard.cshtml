@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            padding: 20px;
            font-family: 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
            min-height: 100vh;
        }
        .header {
            text-align: center;
            padding: 40px 0 30px 0;
            margin-bottom: 30px;
            background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }
        .header h1 {
            color: #fff;
            font-weight: 700;
            margin: 0;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.08);
        }
        .dashboard-box {
            background: #fff;
            border-radius: 18px;
            padding: 36px 32px 40px 32px;
            margin-bottom: 32px;
            box-shadow: 0 6px 24px rgba(44,62,80,0.07);
            transition: box-shadow 0.2s, transform 0.2s;
            height: 100%;
            border: 1.5px solid #e3e8ee;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .dashboard-box:hover {
            box-shadow: 0 12px 32px rgba(44,62,80,0.13);
            transform: translateY(-4px) scale(1.01);
        }
        .dashboard-box h3 {
            color: #2c3e50;
            margin-bottom: 32px;
            font-size: 1.45rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .dashboard-box h3 i {
            font-size: 2rem;
            color: #4b6cb7;
        }
        .dashboard-box .btn {
            width: 100%;
            padding: 28px 0;
            font-size: 1.35rem;
            border-radius: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.2s;
            margin-top: auto;
            box-shadow: 0 2px 8px rgba(44,62,80,0.07);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 16px;
        }
        .dashboard-box .btn i {
            font-size: 1.5rem;
        }
        .dashboard-box .btn:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 18px rgba(44,62,80,0.13);
        }
        .btn-primary {
            background: linear-gradient(90deg, #4b6cb7 0%, #5ac8fa 100%);
            border: none;
            color: #fff;
        }
        .btn-success {
            background: linear-gradient(90deg, #11998e 0%, #38ef7d 100%);
            border: none;
            color: #fff;
        }
        .btn-info {
            background: linear-gradient(90deg, #2193b0 0%, #6dd5ed 100%);
            border: none;
            color: #fff;
        }
        .btn-warning {
            background: linear-gradient(90deg, #f46b45 0%, #eea849 100%);
            border: none;
            color: #fff;
        }
        .back-button {
            margin-top: 40px;
            text-align: center;
        }
        .back-button .btn {
            padding: 14px 36px;
            font-size: 1.15rem;
            border-radius: 10px;
            background: linear-gradient(135deg, #2c3e50 0%, #4b6cb7 100%);
            border: none;
            color: #fff;
        }
        .last-updated {
            text-align: center;
            color: #6c757d;
            margin-top: 25px;
            font-size: 0.95rem;
            background: rgba(255,255,255,0.8);
            padding: 10px 18px;
            border-radius: 8px;
            display: inline-block;
            position: relative;
            left: 50%;
            transform: translateX(-50%);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-shield-alt"></i> Administrator Dashboard</h1>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-history"></i> Login History</h3>
                    <a href="@Url.Action("ViewLoginHistory", "Login")" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> View Login Records
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-users"></i> Registration History</h3>
                    <a href="@Url.Action("ViewDatabase", "Register")" class="btn btn-success">
                        <i class="fas fa-user-plus"></i> View User Registrations
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-exchange-alt"></i> Card Transfers</h3>
                    <a href="@Url.Action("ViewTransferA2A", "Transfer")" class="btn btn-info">
                        <i class="fas fa-money-bill-wave"></i> View Transfer Records
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="dashboard-box">
                    <h3><i class="fas fa-headset"></i> Support Messages</h3>
                    <a href="@Url.Action("ViewSupportMessages", "Support")" class="btn btn-warning">
                        <i class="fas fa-envelope"></i> View Support Inquiries
                    </a>
                </div>
            </div>
        </div>

        <div class="back-button">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="fas fa-home"></i> Return to Home
            </a>
        </div>

        <div class="last-updated">
            <i class="fas fa-clock"></i> Last updated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html> 