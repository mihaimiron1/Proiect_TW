@model IEnumerable<eUseControl.Web.Models.SupportTable>

@{
    Layout = null;
    ViewBag.Title = "Mesaje Suport";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5" style="max-width: 98vw;">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Mesaje Suport</h2>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" style="min-width: 1200px;">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nume utilizator</th>
                                <th>Email</th>
                                <th>Numar de telefon</th>
                                <th>Mesaj</th>
                                <th>Data trimiterii</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>@item.UserEmail</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Message</td>
                                        <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Nu există mesaje de suport.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-right">
                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-primary">Înapoi la Dashboard</a>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
</body>
</html> 