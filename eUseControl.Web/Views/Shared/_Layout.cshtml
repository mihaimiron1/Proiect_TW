<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AMC Bank</title>
    @Styles.Render("~/Content/css")
    <style>
        :root {
            --primary-dark: #163B3D;
            --primary-medium: #0B9CA6;
            --primary-light: #C1E6E8;
            --secondary-dark: #1E4445;
            --secondary-light: #8EBFBD;
        }

        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            font-family: 'Kantumruy Pro', sans-serif;
            background: white;
            overflow-x: hidden;
        }

        /* Header */
        .amc-header {
            width: 100%;
            background: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .logo {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-dark);
            text-decoration: none;
            cursor: pointer;
        }

        .logo:hover {
            text-decoration: none;
            color: var(--primary-dark);
        }

        .logo-italic {
            font-style: italic;
        }

        .header-buttons {
            display: flex;
            gap: 15px;
            margin-right: 50px;
        }

        .header-button {
            background: transparent;
            border: 2px solid var(--secondary-dark);
            border-radius: 19px;
            color: var(--primary-medium);
            font-weight: 700;
            padding: 8px 20px;
            cursor: pointer;
            white-space: nowrap;
        }

        /* Menu */
        .amc-menu {
            width: 100%;
            background: linear-gradient(90deg, var(--primary-dark) 69%, var(--secondary-light) 95%);
            padding: 15px 0;
        }

        .menu-items {
            display: flex;
            justify-content: space-around;
            list-style: none;
            padding: 0;
            margin: 0;
            color: white;
        }

        .menu-items li {
            cursor: pointer;
            padding: 0 10px;
        }

        .menu-items a {
            color: white;
            text-decoration: none;
        }

        .menu-items a:hover {
            color: var(--primary-light);
            text-decoration: none;
        }

        /* Main Content */
        .main-content {
            min-height: calc(100vh - 200px);
            padding: 2rem;
        }

        /* Floating support window */
        .floating-window {
            position: fixed;
            right: 20px;
            bottom: 20px;
            background: #163B3D;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.8rem;
            cursor: pointer;
            transition: background-color 0.3s;
            z-index: 1000;
        }

        .floating-window:hover {
            background-color: #0B9CA6;
        }

        .floating-window:hover::after {
            content: "Salut, cu ce te putem ajuta?";
            position: absolute;
            right: 70px;
            top: 50%;
            transform: translateY(-50%);
            background: #163B3D;
            color: white;
            padding: 10px;
            border-radius: 5px;
            font-size: 14px;
            white-space: nowrap;
        }

        .floating-window span {
            text-align: center;
            line-height: 1.2;
        }

        .floating-window span:first-child {
            font-weight: bold;
        }

        .floating-window span:last-child {
            color: #93D5E0;
            font-size: 0.7rem;
        }

        .popup {
            display: none;
            position: fixed;
            right: 20px;
            bottom: 90px;
            background: white;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            width: 250px;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            z-index: 1000;
            text-align: center;
        }

        .popup h3 {
            margin: 0 0 10px;
            font-size: 18px;
            color: #163B3D;
        }

        .popup p {
            margin: 0;
            font-size: 14px;
            color: #455B5D;
        }

        .popup textarea {
            width: 100%;
            height: 80px;
            margin-top: 10px;
            padding: 0px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            resize: none;
        }

        .popup button {
            margin-top: 10px;
            padding: 5px 10px;
            background: #05FFB9;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .popup button:hover {
            background-color: #00e6a8;
        }

        .popup .confirmation-message {
            display: none;
            margin-top: 10px;
            font-size: 14px;
            color: #163B3D;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="amc-header">
        <a href="@Url.Action("Index", "Home")" class="logo">
            <span>AMC</span>
            <span class="logo-italic">bank</span>
        </a>
        <div class="header-buttons">
            <a href="@Url.Action("aboutus", "AMC")" class="header-button">Despre noi</a>
            @if (Session["UserEmail"] != null)
            {
                if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
                {
                    <a href="@Url.Action("Dashboard", "Admin")" class="header-button">Admin Dashboard</a>
                }
                <a href="@Url.Action("Logout", "Login")" class="header-button">Deconectare</a>
                <span class="header-button" style="color: var(--primary-medium);">@Session["UserName"]</span>
            }
            else
            {
                <a href="@Url.Action("Index", "Login")" class="header-button">Logare</a>
            }
        </div>
    </div>

    <!-- Menu -->
    <div class="amc-menu">
        <ul class="menu-items">


            <li><a href="#">carduri</a></li>
            <li><a href="@Url.Action("Index", "Obligatiuni")">obligațiuni</a></li>
            <li><a href="@Url.Action("Index", "transfer")">transferuri</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Floating Support Window -->
    <div class="floating-window" onclick="togglePopup(event)">
        <span>AMC</span>
        <span>suport</span>
    </div>

    <div class="popup" id="popup">
        <h3>Ajutor și suport</h3>
        <p>Cu ce te putem ajuta astăzi?</p>
        <textarea placeholder="Scrie mesajul tău aici..."></textarea>
        <button onclick="sendMessage()">Trimite</button>
        <div class="confirmation-message" id="confirmationMessage">
            Mulțumim pentru mesaj! Echipa noastră vă va reveni în cel mai scurt timp.
        </div>
    </div>

    <script>
        function togglePopup(e) {
            e.stopPropagation();
            const popup = document.getElementById("popup");
            popup.style.display = popup.style.display === "block" ? "none" : "block";
            document.getElementById("confirmationMessage").style.display = "none";
        }

        function sendMessage() {
            const textarea = document.querySelector('.popup textarea');
            if (textarea.value.trim()) {
                document.getElementById("confirmationMessage").style.display = "block";
                textarea.value = "";
            }
        }

        document.addEventListener('click', (e) => {
            const popup = document.getElementById("popup");
            const floating = document.querySelector('.floating-window');
            if (popup.style.display === "block" && !popup.contains(e.target) && !floating.contains(e.target)) {
                popup.style.display = "none";
            }
        });
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>