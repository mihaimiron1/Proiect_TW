@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AMC Bank</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            font-family: 'Kantumruy Pro', sans-serif;
        }

        .main-container {
            min-height: 100vh;
            position: relative;
            background: linear-gradient(180deg, white 62%, #0C9CA7 91%);
        }

        .logo {
            font-size: 3rem;
            font-weight: 700;
            color: #163B3D;
            position: relative;
            z-index: 1030;
        }

        .logo-italic {
            font-style: italic;
        }

        .button-custom {
            background: rgba(217, 217, 217, 0);
            border-radius: 19px;
            border: 2px #1E4445 solid;
            color: #0B9CA6;
            font-size: 1rem;
            font-weight: 700;
            padding: 0.5rem 1rem;
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
        }

            .button-custom:hover {
                background-color: #1E4445;
                color: white;
            }

        .menu-custom {
            width: 100%;
            background: linear-gradient(90deg, #163B3D 69%, #8EBFBD 95%);
            padding: 1rem 0;
        }

        .menu-items {
            color: white;
            font-size: 1rem;
            font-weight: 400;
        }

            .menu-items span {
                cursor: pointer;
                transition: color 0.3s;
                padding: 0 1rem;
            }

                .menu-items span:hover {
                    color: #0B9CA6;
                }

        .profile-section {
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            padding: 2rem;
            margin-top: 2rem;
        }

        .card-section {
            background: linear-gradient(45deg, #1E4445, #0B9CA6);
            border-radius: 10px;
            color: white;
            padding: 1.5rem;
            margin-top: 1.5rem;
        }

        .info-label {
            color: #67797A;
            font-size: 0.9rem;
            margin-bottom: 0.3rem;
        }

        .info-value {
            color: #163B3D;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .transactions-title {
            font-size: 2rem;
            font-weight: 700;
            color: #163B3D;
            margin-bottom: 1.5rem;
        }

        .transaction-section {
            height: 300px;
            padding: 20px;
            color: white;
            border-radius: 10px;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            text-align: left;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .transaction-section h2 {
                font-size: 24px;
                font-weight: 700;
                margin: 0;
            }

            .transaction-section p {
                font-size: 16px;
                font-weight: 500;
            }

            .transaction-section.black-text {
                color: black;
            }

        .transaction-button {
            width: 100%;
            height: 56px;
            background: #05FFB9;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 28px;
            border: 1px #455B5D solid;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .transaction-button:hover {
                background-color: #00e6a8;
            }

        .transaction-button-text {
            color: #455B5D;
            font-size: 16px;
            font-weight: 400;
        }

        .floating-window {
            position: fixed;
            right: 20px;
            bottom: 20px;
            background: #163B3D;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.8rem;
            cursor: pointer;
            transition: background-color 0.3s;
            z-index: 1000;
        }

            .floating-window:hover {
                background-color: #0B9CA6;
            }

                .floating-window:hover::after {
                    content: "Salut, cu ce te putem ajuta?";
                    position: absolute;
                    right: 70px;
                    top: 50%;
                    transform: translateY(-50%);
                    background: #163B3D;
                    color: white;
                    padding: 10px;
                    border-radius: 5px;
                    font-size: 14px;
                    white-space: nowrap;
                }

            .floating-window span {
                text-align: center;
                line-height: 1.2;
            }

                .floating-window span:first-child {
                    font-weight: bold;
                }

                .floating-window span:last-child {
                    color: #93D5E0;
                    font-size: 0.7rem;
                }

        .popup {
            display: none;
            position: fixed;
            right: 20px;
            bottom: 90px;
            background: white;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            width: 250px;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            z-index: 1000;
            text-align: center;
        }

            .popup h3 {
                margin: 0 0 10px;
                font-size: 18px;
                color: #163B3D;
            }

            .popup p {
                margin: 0;
                font-size: 14px;
                color: #455B5D;
            }

            .popup textarea {
                width: 100%;
                height: 80px;
                margin-top: 10px;
                padding: 0px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 14px;
                resize: none;
            }

            .popup button {
                margin-top: 10px;
                padding: 5px 10px;
                background: #05FFB9;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .popup button:hover {
                    background-color: #00e6a8;
                }

            .popup .confirmation-message {
                display: none;
                margin-top: 10px;
                font-size: 14px;
                color: #163B3D;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="container-fluid">
            <!-- Header row -->
            <div class="row pt-3">
                <div class="col-md-6">
                    <div class="logo">
                        <span>AMC</span>
                        <span class="logo-italic">bank</span>
                    </div>
                </div>
                <div class="col-md-6 d-flex justify-content-end align-items-center">
                    <div class="search-icon me-4" onclick="alert('Căutare activată!')">
                        <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M24 24L16.5 16.5M1 10C1 14.9706 5.02944 19 10 19C14.9706 19 19 14.9706 19 10C19 5.02944 14.9706 1 10 1C5.02944 1 1 5.02944 1 10Z" stroke="#455B5D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <div class="button-custom network-button me-3" onclick="alert('Rețea unități deschisă!')">Despre noi</div>
                    <div class="button-custom login-button" onclick="alert('Logare deschisă!')">Logare</div>
                </div>
            </div>

            <!-- Menu row -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="menu-custom">
                        <div class="menu-items d-flex justify-content-around flex-wrap">
                            <span onclick="alert('Credite selectate!')">credite</span>
                            <span onclick="alert('Depozite selectate!')">depozite</span>
                            <span onclick="alert('Carduri selectate!')">carduri</span>
                            <span onclick="alert('Depozite selectate!')">depozite</span>
                            <span onclick="alert('Obligațiuni selectate!')">obligațiuni</span>
                            <span onclick="alert('Plăți și transferuri selectate!')">plăți și transferuri</span>
                            <span onclick="alert('Curs valutar selectat!')">curs valutar</span>
                            <span onclick="alert('Caritate selectată!')">caritate</span>
                            <span onclick="alert('Mai multe selectate!')">mai multe</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Section -->
            <div class="row mx-1 mb-4">
                <div class="col-12">
                    <div class="profile-section">
                        <h2 class="mb-4" style="color: #163B3D; font-weight: 700;">Profilul meu</h2>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-item mb-3">
                                    <div class="info-label">Nume și Prenume</div>
                                    <div class="info-value">Ion Popescu</div>
                                </div>

                                <div class="info-item mb-3">
                                    <div class="info-label">IDNP</div>
                                    <div class="info-value">1234567890123</div>
                                </div>

                                <div class="info-item mb-3">
                                    <div class="info-label">Adresă</div>
                                    <div class="info-value">str. Mihai Eminescu 12, Chișinău</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-item mb-3">
                                    <div class="info-label">Telefon</div>
                                    <div class="info-value">+373 69 123 456</div>
                                </div>

                                <div class="info-item mb-3">
                                    <div class="info-label">Email</div>
                                    <div class="info-value">ion.popescu@example.com</div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Section -->
                        <div class="card-section">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="mb-2" style="font-size: 0.9rem;">Card debit</div>
                                    <div class="mb-3" style="font-size: 1.5rem; letter-spacing: 2px;">
                                        •••• •••• •••• 1234
                                    </div>
                                    <div class="d-flex gap-5">
                                        <div>
                                            <div style="font-size: 0.8rem;">Deținător card</div>
                                            <div>ION POPESCU</div>
                                        </div>
                                        <div>
                                            <div style="font-size: 0.8rem;">Expiră la</div>
                                            <div>12/25</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="cvv-display">
                                    <button class="btn btn-sm"
                                            style="background: rgba(255,255,255,0.2); color: white; border: none;"
                                            onclick="toggleCVV()">
                                        Afișează CVV
                                    </button>
                                    <div id="cvvValue" style="display: none; margin-top: 5px;">123</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Floating window and popup -->
            <div class="floating-window" onclick="togglePopup(event)">
                <span>AMC</span>
                <span>suport</span>
            </div>

            <div class="popup" id="popup">
                <h3>Ajutor și suport</h3>
                <p>Cu ce te putem ajuta astăzi?</p>
                <textarea placeholder="Scrie mesajul tău aici..."></textarea>
                <button onclick="sendMessage()">Trimite</button>
                <div class="confirmation-message" id="confirmationMessage">
                    Mulțumim pentru mesaj! Echipa noastră vă va reveni în cel mai scurt timp.
                </div>
            </div>
        </div>

        <script>
            function togglePopup(event) {
                event.stopPropagation();
                var popup = document.getElementById("popup");
                var confirmationMessage = document.getElementById("confirmationMessage");
                if (popup.style.display === "block") {
                    popup.style.display = "none";
                } else {
                    popup.style.display = "block";
                    confirmationMessage.style.display = "none";
                }
            }

            function sendMessage() {
                var textarea = document.querySelector('.popup textarea');
                var message = textarea.value;
                if (message.trim() !== "") {
                    var confirmationMessage = document.getElementById("confirmationMessage");
                    confirmationMessage.style.display = "block";
                    textarea.value = "";
                } else {
                    alert("Te rugăm să scrii un mesaj înainte de a trimite.");
                }
            }

            document.addEventListener('click', function (event) {
                var popup = document.getElementById("popup");
                var floatingWindow = document.querySelector('.floating-window');
                if (popup.style.display === "block" && !popup.contains(event.target) && !floatingWindow.contains(event.target)) {
                    popup.style.display = "none";
                }
            });

            function toggleCVV() {
                const cvvElement = document.getElementById('cvvValue');
                if (cvvElement.style.display === 'none') {
                    cvvElement.style.display = 'block';
                    setTimeout(() => {
                        cvvElement.style.display = 'none';
                    }, 5000);
                } else {
                    cvvElement.style.display = 'none';
                }
            }
        </script>
</body>
</html>

